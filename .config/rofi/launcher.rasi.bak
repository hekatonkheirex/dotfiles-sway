{
    background-color:       #282a34;
    text-color:             #abbf2b;
    font:                   "DejaVu Sans Mono 10";
}


window {
    /*anchor:               north;*/
    location:               north west;
    width:                  85.3%;
    height:                 27px;
    padding:                0;
    children:               [ horibox ];
    border-radius:          12px;
    border:                 4px 20px;
    border-color:           #282a34;


}

horibox {
    orientation: horizontal;
    children:   [ /*prompt, */entry, listview ];

}
/*add this to "children" if you want to see what is running i.e calc file-browser etc*/
/*prompt,*/

listview {
    layout:             horizontal;
    spacing:            12px;
    padding:            1px;
    lines:              250;
}

entry {
    text-color:         #abbfb2;
    padding:            2px 18px;
    expand:             false;
    width:              10em;

}

element {
    padding:            0px 8px 0px 8px;
    
}
element selected {
    padding:            4px 4px;
    text-color:         #282a34;
    background-color:   #abbfb2;
    border-radius:      12px;
}
